 function amendTheSentence(s){
   let result = "" + s.charAt(0).toLowerCase();
   for(let i=1; i<s.length; i++){
     if(s.charAt(i) === s.charAt(i).toUpperCase()){
       result = result.concat(" ",s.charAt(i).toLowerCase())
     } else {
       result = result.concat(s.charAt(i));
     }
   }
   return result
}
amendTheSentence("CodesignalIsAwesome");
